{
	"$schema": "https://json-schema.org/draft/2020-12/schema",
	"$id": "https://github.com/myersm0/werkverzeichnis/schemas/collection.schema.json",
	"title": "Collection",
	"type": "object",
	"required": ["id", "title", "scheme", "compositions"],
	"properties": {
		"id": {
			"type": "string",
			"pattern": "^[a-z0-9-]+$",
			"description": "URL-friendly identifier"
		},
		"title": {
			"type": "object",
			"description": "Multilingual title dict",
			"additionalProperties": {"type": "string"}
		},
		"composer": {
			"type": "string",
			"description": "Composer slug (simple case)"
		},
		"attribution": {
			"type": "array",
			"description": "Shared attribution for all compositions in collection (complex case)",
			"items": {
				"type": "object",
				"properties": {
					"composer": {"type": "string"},
					"dates": {
						"type": "object",
						"properties": {
							"composed": {"type": "integer"},
							"published": {"type": "integer"},
							"premiered": {"type": "integer"},
							"revised": {"type": "integer"}
						}
					},
					"since": {
						"type": "string",
						"pattern": "^\\d{4}(-\\d{2})?(-\\d{2})?$"
					}
				}
			}
		},
		"scheme": {
			"type": "string",
			"description": "Catalog scheme for compositions in this collection"
		},
		"description": {
			"type": "string"
		},
		"compositions": {
			"type": "array",
			"description": "Ordered list of catalog numbers",
			"items": {"type": "string"}
		}
	}
}
